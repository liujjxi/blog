<%- include header %>

<form method="post">
	<div class="form-group">
		<label for="title">标题</label>
		<input type="text" value="<%= post.title%>" disabled="disabled" class="form-control">
	</div>
  <div class="form-group">
    <label for="tag1" class="">标签</label>
    <div class="row">
	    <div class="col-xs-4"><input type="text" class="form-control" id="tag1" name="tag1"  value="<%= post.tags[0]%>" disabled="disabled"></div>
	    <div class="col-xs-4"><input type="text" class="form-control" id="tag2" name="tag2"  value="<%= post.tags[1]%>" disabled="disabled"></div>
	    <div class="col-xs-4"><input type="text" class="form-control" id="tag3" name="tag3"  value="<%= post.tags[2]%>" disabled="disabled"></div>
    </div>
  </div>
	<div class="form-group">
		<label for="post">正文</label>
		<textarea name="post" id="post" class="form-control" rows="10"><%= post.post %></textarea>
	</div>
	<input type="submit" class="btn btn-primary" value="保存修改">
</form>
<%- include footer %>