<%- include header %>
<form method="post">
  <div class="form-group">
    <label for="name">用户名</label>
    <input type="text" class="form-control" id="name" placeholder="用户名" name="name">
  </div>
  <div class="form-group">
    <label for="password">密码</label>
    <input type="password" class="form-control" id="password" placeholder="密码" name="password">
  </div>
  <div class="form-group">
    <label for="password-repeat">密码确认</label>
    <input type="password" class="form-control" id="password-repeat" placeholder="密码确认" name="password-repeat">
  </div>
  <div class="form-group">
    <label for="email">邮箱</label>
    <input type="email" class="form-control" id="email" placeholder="邮箱" name="email">
  </div>

  <input type="submit" class="btn btn-default" value="注册">
</form>
<%- include footer %>
